# Example configuration for assistant-api.
# Copy this file to /etc/assistant-api/config.yaml or pass it via --config.

logging:
  # Directory where assistant-api writes its log file.
  directory: /var/log/assistant-api

assistant:
  # Default language the assistant must use when replying.
  # Examples: es, es-ES, en, en-US, en-GB, fr, de, ru
  default_language: en

tts:
  # TTS engine to use: "piper" or "dummy".
  engine: piper
  # Directory containing Piper voice models (expects <voice>.onnx files).
  models_path: /opt/piper/voices
  # Default voice model name (without .onnx). Used when no "voice" is provided.
  # The default model is loaded on first use (or via prewarm) and kept resident
  # in the Piper worker for subsequent requests.
  default_model: en_US-amy-low
  # Additional models can be requested per call using the "voice" field.

llm:
  # LLM provider to use (currently only "ollama").
  provider: ollama
  # Ollama model name.
  model: mistral:7b-instruct-q4_0
  # Ollama host URL.
  host: http://localhost:11434
  # Sampling temperature.
  temperature: 0.7
  # Maximum tokens to generate per request.
  max_tokens: 256
  persona:
    # Enable the base persona system prompt.
    enabled: true
    file: /etc/assistant-api/persona.txt
